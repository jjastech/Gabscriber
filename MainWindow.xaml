<Window x:Class="wpf3625_147pm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf3625_147pm"
        mc:Ignorable="d"
        Title="MainWindow" 
        x:Name="ResponsiveWindow"
        Height="595" 
        Width="1147"
        MinWidth="300"
        MinHeight="40"
        WindowStyle="None"        
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="10" />
    </WindowChrome.WindowChrome>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="#414850" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="205"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0" Fill="#414850" />

            <Grid Grid.Column="1" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="250" />
                </Grid.RowDefinitions>
            </Grid>
            <Rectangle Grid.Column="1" Fill="#414850" Grid.ColumnSpan="2" Margin="0,54,0,0" />
            <Rectangle Grid.Column="2" Fill="#414850" />
            <Rectangle Grid.Column="3" Fill="#f5faf5" />
            <Rectangle Grid.Column="4" Fill="#414850" />

            <TextBlock x:Name="TbStatusState" Visibility="Collapsed" Grid.Column="1" Margin="0,361,0,0" Width="247"  Height="197" FontFamily="Rubik-Regular" Foreground="White" FontSize="13.5" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2">
            For this app to work, always: <LineBreak/>
            1. Connect to the internet <LineBreak/>
            2. Turn on Microphone and give<LineBreak/>
            Gabscriber access 
            to microphone <LineBreak/>
            3. Turn on Speech Recognition <LineBreak/><LineBreak/>
            Click "FAQ" button <LineBreak/>
            for more details.


            </TextBlock>

            <ScrollViewer x:Name="TbScrollViewer" Visibility="Collapsed" VerticalScrollBarVisibility="Auto" Padding="50,50,50,50" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto">
                <TextBlock x:Name="TbTranscription" Visibility="Collapsed" Padding="50,50,50,50"  TextWrapping="Wrap" FontFamily="Rubik-Regular" FontSize="19" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto">
                I'm waiting for you to talk .... 
                Your Transcription will be shown here.
                </TextBlock>
            </ScrollViewer>

        </Grid>
        <Rectangle Grid.Row="2" Fill="#414850" />


        <TextBlock Background="#414850" Foreground="White" HorizontalAlignment="Left" Margin="98,0,0,0" Padding="6,6,0,0" TextWrapping="Wrap"  FontWeight="SemiBold"  FontSize="16" VerticalAlignment="Center" Width="94" Height="32">
            Gabscriber
        </TextBlock>


        <Button x:Name="ButtonClose" Grid.Row="0" HorizontalAlignment="Right" Width="42" Click="ButtonCloseClick">
            <Button.Content>
                <Image Source="/Images/Close.png" />
            </Button.Content>
        </Button>


        <Button x:Name="ButtonFaq" IsEnabled="True" Opacity="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="73" Width="250" Grid.Row="1" Click="ButtonFaqClick" Margin="23,0,0,0">
            <StackPanel Orientation="Horizontal" Background="#414850">
                <Image Source="/Images/Faq.png" Width="95"/>
                <TextBlock Width="155" FontFamily="Rubik-Regular" Foreground="White" FontSize="16" Padding="0,15,35,0" Height="71" TextAlignment="Center" VerticalAlignment="Center">
                    Frequently Asked<LineBreak/>
                    Questions (FAQ)
                </TextBlock>
            </StackPanel>
        </Button>


        <Button x:Name="ButtonStart" IsEnabled="True" Opacity="1" HorizontalAlignment="Left" Margin="23,76,0,0" VerticalAlignment="Top" Height="73" Width="250" Grid.Row="1" Click="ButtonStartClick">
            <StackPanel Orientation="Horizontal" Background="#414850">
                <Border BorderThickness="7">
                    <Image Source="/Images/Start615.png" Width="90" />
                </Border>
                <TextBlock Width="140" FontFamily="Rubik-Regular" Foreground="White" FontSize="17" Padding="0,15,25,10" Height="71" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center">
                    Start <LineBreak/>
                    Transcriber
                </TextBlock>
            </StackPanel>
        </Button>


        <Button x:Name="ButtonSave" IsEnabled="False" Opacity="0.5" HorizontalAlignment="Left" Margin="23,152,0,0" VerticalAlignment="Top" Height="73" Width="250" Grid.Row="1" Click="ButtonSaveClick" >
            <StackPanel Orientation="Horizontal" Background="#414850">
                <Image Source="/Images/Save.png" Width="100"/>
                <TextBlock Width="150" FontFamily="Rubik-Regular" Foreground="White" FontSize="17" Padding="0,12,30,10" Height="71" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center">
                    Save<LineBreak/>
                    Transcription
                </TextBlock>
            </StackPanel>
        </Button>


        <Button x:Name="ButtonStop" IsEnabled="False" Opacity="0.5" HorizontalAlignment="Left" Margin="23,228,0,0" VerticalAlignment="Top" Height="73" Width="250" Grid.Row="1" Click="ButtonStopClick" >
            <StackPanel Orientation="Horizontal" Background="#414850">
                <Image Source="/Images/Stop.png" Width="100"/>
                <TextBlock Width="150" FontFamily="Rubik-Regular" Foreground="White" FontSize="17" Padding="0,12,35,10" Height="71" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center">
                    Stop<LineBreak/>
                    Transcriber
                </TextBlock>
                <Button Content="Button"/>
            </StackPanel>
        </Button>

        <Label x:Name="LabelReminder" Visibility="Collapsed" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,311,0,0" Height="50" Grid.Row="1" Width="150">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal">
                <Image Source="/Images/Reminder.png" Width="50"/>
                <TextBlock  Foreground="Gold" Width="95" FontFamily="Rubik-Regular" FontSize="15" Padding="0,7,0,0" TextAlignment="Center" Height="32" TextWrapping="Wrap">
                    Reminder:
                </TextBlock>
            </StackPanel>
        </Label>


        <!-- MicNotice -->
        <RichTextBox x:Name="MicNotice"                                        
            Visibility="Collapsed"
            IsDocumentEnabled="True"
            IsReadOnly="True"
            Background="LightBlue"
            Grid.Row="1"
            FontSize="15" 
            Margin="468,10,194,272"            
            AcceptsReturn="True"
>
            <RichTextBox.Resources>
                <Style TargetType="Paragraph">
                    <Setter Property="Margin" Value="0,20,0,0"/>
                </Style>
            </RichTextBox.Resources>

            <FlowDocument TextAlignment="Center">
                <Paragraph>
                    <LineBreak/>
                    Problem: This app has no access to your microphone.
                    <LineBreak/>
                    <LineBreak/>
                    Solution:
                    <LineBreak/>
                    Give this app access to Microphone.
                    <LineBreak/>
                    Go to Settings -> Privacy -> Microphone (Turn on Microphone)
                    <LineBreak/>
                    -> Choose this app to access your microphone (Turn on Gabscriber)
                    <LineBreak/>
                    Once this is done, click the "Continue" button below.
                </Paragraph>
                <Paragraph>
                    <InlineUIContainer>
                        <Button x:Name="ContinueMic" Content="Continue" Background="#fac800" FontFamily="Rubik-Regular" FontSize="20" Height="49" Width="134" Click="ContinueMicClick" />
                    </InlineUIContainer>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>


        <!-- InternetNotice -->
        <RichTextBox x:Name="InternetNotice"                     
            Visibility="Collapsed"
            IsDocumentEnabled="True"
            IsReadOnly="True"
            Background="LightBlue"
            Grid.Row="1"
            FontSize="15" 
            Margin="465,25,182,290"            
            AcceptsReturn="True"
>
            <RichTextBox.Resources>
                <Style TargetType="Paragraph">
                    <Setter Property="Margin" Value="0,20,0,0"/>
                </Style>
            </RichTextBox.Resources>

            <FlowDocument TextAlignment="Center">
                <Paragraph>
                    <LineBreak/>
                    Problem: You are offline.
                    <LineBreak/>
                    <LineBreak/>
                    Solution:
                    <LineBreak/>
                    Connect to the internet. This app needs internet connection.
                    <LineBreak/>
                    Once this is done, click the "Continue" button below.
                </Paragraph>
                <Paragraph>
                    <InlineUIContainer>
                        <Button x:Name="ContinueInternet" Content="Continue" Background="#fac800" FontFamily="Rubik-Regular" FontSize="20" Height="49" Width="134" Click="ContinueInternetClick"/>
                    </InlineUIContainer>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>


        <!-- SpeechNotice -->
        <RichTextBox x:Name="SpeechNotice"
            Visibility="Collapsed"
            IsDocumentEnabled="True"
            IsReadOnly="True"
            Background="LightBlue"
            Grid.Row="1"
            FontSize="15" 
            Margin="406,36,136,250"            
            AcceptsReturn="True" RenderTransformOrigin="0.5,0.5"
>
            <RichTextBox.Resources>
                <Style TargetType="Paragraph">
                    <Setter Property="Margin" Value="0,20,0,0"/>
                </Style>
            </RichTextBox.Resources>
            <RichTextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.381"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.993"/>
                </TransformGroup>
            </RichTextBox.RenderTransform>

            <FlowDocument TextAlignment="Center">
                <Paragraph>
                    <LineBreak/>
                    Problem: This app has no access to Microsoft Speech.
                    <LineBreak/>
                    <LineBreak/>
                    Solution:
                    <LineBreak/>
                    Give this app access to Microsoft Speech.
                    <LineBreak/>
                    Go to Settings -> Privacy -> Speech (Turn on Online Speech Recognition)
                    <LineBreak/>
                    Once this is done, click the "Continue" button below.
                </Paragraph>
                <Paragraph>
                    <InlineUIContainer>
                        <Button x:Name="ContinueSpeech" Content="Continue" Background="#fac800" FontFamily="Rubik-Regular" FontSize="20" Height="49" Width="134" Click="ContinueSpeechClick" />
                    </InlineUIContainer>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>


        <!-- BreakNotice -->
        <RichTextBox x:Name="BreakNotice"  
            Visibility="Collapsed"
            IsDocumentEnabled="True"
            IsReadOnly="True"
            Background="LightBlue"
            FontSize="15"
            Margin="273,39,25,22"          
            AcceptsReturn="True" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="3"
>
            <RichTextBox.Resources>
                <Style TargetType="Paragraph">
                    <Setter Property="Margin" Value="0,20,0,0"/>
                </Style>
            </RichTextBox.Resources>
            <RichTextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.381"/>
                    <RotateTransform Angle="0.056"/>
                    <TranslateTransform X="0.993"/>
                </TransformGroup>
            </RichTextBox.RenderTransform>

            <FlowDocument TextAlignment="Center">
                <Paragraph>
                    <LineBreak/>
                    <InlineUIContainer>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/DrinkDark.png" Width="75" Height="75"/>
                        </StackPanel>
                    </InlineUIContainer>
                </Paragraph>
                <Paragraph>
                    Let's take a break!
                    <LineBreak/>
                    Your transcription is automatically saved to
                    File Explorer -> Documents Folder
                    <LineBreak/>
                    -> Gabscriber folder with file name "gabscriber_break{timestamp}"
                    <LineBreak/>
                    <LineBreak/>
                    Continue your transcription by clicking the "Continue" button below
                    <LineBreak/>
                    and click the "Start Transcriber" button again.
                </Paragraph>
                <Paragraph>
                    <InlineUIContainer>
                        <Button x:Name="ContinueBreakTime" Content="Continue" Background="#fac800" FontFamily="Rubik-Regular" FontSize="20" Height="49" Width="134" Click="ContinueBreakTimeClick" />
                    </InlineUIContainer>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
